.body{
    padding:2% 2%;
}
.list-item
{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 5rpx;
    border-bottom: 2rpx solid #888888;
    text-align: left;
    
}
.list-item2
{
    display: flex;
    align-items: center;
    
    margin: 5rpx;
    text-align: left;
    
}
.list-item3
{
    
    display: flex;
    align-items: center;
    justify-content: center;
    padding:0 10rpx;
    border-bottom: 2rpx solid #888888;
    text-align: left;
    background-color: #fff;
    position: relative;
    transition: all .25s ease;
    -webkit-transition: all 0.25s ease;
    
}
.list-link{
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: left;
    flex:1;
    
}
.remove{
    width:15%;
    height:100%;
    line-height: 100rpx;
    background-color:#e64340;
    position: absolute;
    color: #fff;
    right:-15%;
    z-index: 52;
    text-align: center;
    justify-content: center;
    align-items: center;
}
/*justify-content: center;*/
.bodyCart{
    padding:2% 0;
    overflow-x: hidden;
}
.list-item image,.list-item2 image,.cartimg,list-item3 image{
    display: block;
    width:100rpx;
    height:100rpx;
}

.list-right{
    flex: 1;
    padding: 10rpx;
    text-align: left;
}
.list-right .detail{
    display: block;
    color: #939393;
    font-size: 30rpx;
    text-align: left;
}
.list-right .name{
    margin: 10rpx 0;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    text-overflow: ellipsis;
    color: #333; 
    text-align: left;
}
.list-right .price{
    text-align: left;
}
.list-right .currentprice{
    color:#da7c0c;
    font-weight: bold;
    
}
.list-right .marketprice{
    text-decoration: line-through;
    color: #939393;
    
}

.QTYcontrol{
    flex-direction: row;
    padding:10rpx;
    display: flex;
    height:70rpx;
    vertical-align:middle;

}
.QTYcontrol image,.list-rightlink image{
    width:50rpx;
    height: 50rpx;
    padding:0 20rpx;
}
.list-rightlink{
    flex:0;
}
.QTYbutton{
    border:1px #939393 solid;
    width:70rpx;
    text-align:center;
    vertical-align:middle;
    padding:10rpx 0 10rpx;

    }
.QTYinput{
    border-top: 1px #939393 solid;
    border-bottom: 1px #939393 solid;
    width:70rpx;
    text-align:center;
    padding:10rpx 0 10rpx;
    }
